<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/all_linyout"
        android:layout_height="match_parent">

        <com.tiocloud.chat.baseNewVersion.view.NoScrollViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tabStrip" />

        <com.tiocloud.chat.widget.PagerSlidingTabStrip
            android:id="@+id/tabStrip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_f9f9f9"
            app:psts_indicatorHeight="0dp"
            app:psts_underlineHeight="0px" />

        <com.tiocloud.chat.widget.reference.drop.DropCover
            android:id="@+id/unread_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_e9e9e9"
            android:layout_above="@+id/tabStrip"
            />
    </RelativeLayout>

</layout>
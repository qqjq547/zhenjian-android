<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--android:background="@drawable/tio_msg_file_bg"-->

    <ImageView
        android:id="@+id/iv_fileIcon"
        android:layout_width="31dp"
        android:layout_height="41dp"
        android:src="@drawable/tio_file_icon_doc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:ellipsize="middle"
        android:maxWidth="180dp"
        android:minWidth="140dp"
        android:singleLine="true"
        android:text="实习鉴定表实习鉴定表实习鉴定表实习鉴定表实习鉴定表实习鉴定表实习鉴定表.doc"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/iv_fileIcon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="127.9K"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/iv_fileIcon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fileName" />

</androidx.constraintlayout.widget.ConstraintLayout>

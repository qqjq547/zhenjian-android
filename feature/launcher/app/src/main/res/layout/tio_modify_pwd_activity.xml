<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.watayouxiang.androidutils.widget.titlebar.WtTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--原密码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_oldPwd_title"
                style="@style/AccountTitle"
                android:text="@string/old_pwd" />

            <com.watayouxiang.androidutils.widget.edittext.TioEditText
                android:id="@+id/et_oldPwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入原密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/gray_333333"
                android:textColorHint="@color/gray_9c9c9c"
                android:textSize="@dimen/sp_14" />

            <View
                style="@style/AccountLine"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <!--新密码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_newPwd_title"
                style="@style/AccountTitle"
                android:text="@string/new_pwd" />

            <com.watayouxiang.androidutils.widget.edittext.TioEditText
                android:id="@+id/et_newPwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入新密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/gray_333333"
                android:textColorHint="@color/gray_9c9c9c"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_newPwdConfirm_title"
                style="@style/AccountTitle"
                android:text="确认新密码" />

            <com.watayouxiang.androidutils.widget.edittext.TioEditText
                android:id="@+id/et_newPwdConfirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="请再次输入新密码"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/gray_333333"
                android:textColorHint="@color/gray_9c9c9c"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <!--保存-->
        <TextView
            android:id="@+id/tv_save"
            style="@style/AccountOkBtn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="59dp"
            android:text="@string/save" />

    </LinearLayout>

</LinearLayout>
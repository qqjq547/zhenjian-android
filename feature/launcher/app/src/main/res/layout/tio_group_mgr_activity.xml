<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--状态栏-->
        <FrameLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--标题栏-->
        <com.watayouxiang.androidutils.widget.titlebar.WtTitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tb_background="@color/white"
            app:tb_tvTitle_text="群管理" />

        <View
            android:id="@+id/v_groupMgrBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12" />

        <!--群内互加好友-->
        <RelativeLayout
            android:id="@+id/rl_toggleAddFriend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="群内互加好友"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_toggleAddFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>

        <!--开启成员邀请-->
        <RelativeLayout
            android:id="@+id/rl_toggleInviteMember"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="开启成员邀请"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_toggleInviteMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>

        <!--邀请审核-->
        <RelativeLayout
            android:id="@+id/rl_toggleInviteApply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="邀请审核"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_toggleInviteApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_qunneixitongtongzhi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="群内系统通知"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_xitongtongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_qunrenshu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="显示群人数"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_qunrenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_qunchengyuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="显示群成员"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_qunchengyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_VipClear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="群成员清理"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_VipClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_jinqungonggao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="进群显示公告"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_jinqungonggao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_tuqunguanli"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="是否允许成员退群"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_tuiqun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12" />

        <!--全体禁言-->
        <RelativeLayout
            android:id="@+id/rl_banAll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="全体禁言"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_banAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:checked="true"
                android:src="@drawable/tio_curr_info_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_8"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@color/gray_f5f5f5" />
        </RelativeLayout>

        <!--禁言名单-->
        <RelativeLayout
            android:id="@+id/rl_banList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/tio_user_item_bg"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_banList_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="禁言名单"
                android:textColor="@color/gray_111111"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_banList_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/iv_banList_arrow"
                android:layout_toRightOf="@id/tv_banList_title"
                android:gravity="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray_9c9c9c"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_banList_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_forward_item_group" />
        </RelativeLayout>


    </LinearLayout>
</layout>

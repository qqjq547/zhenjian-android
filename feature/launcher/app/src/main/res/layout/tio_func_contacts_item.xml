        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_e9e9e9"
        android:visibility="visible"
        android:layout_marginLeft="70dp"
        app:layout_constraintBottom_toBottomOf="parent"

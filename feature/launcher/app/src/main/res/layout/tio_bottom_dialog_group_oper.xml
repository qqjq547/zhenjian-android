<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/tio_group_oper_dialog_top_item_bg" />

    <TextView
        android:id="@+id/tv_exitGroup"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/exit_group"
        android:textColor="@color/gray_111111"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/v_line01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f8f8f8" />

    <TextView
        android:id="@+id/tv_dissolveGroup"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/dissolve_group"
        android:textColor="@color/gray_111111"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/v_line02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f8f8f8" />

    <TextView
        android:id="@+id/tv_transferGroup"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/transfer_group"
        android:textColor="@color/gray_111111"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_f8f8f8" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/gray_111111"
        android:textSize="@dimen/sp_16" />

</LinearLayout>
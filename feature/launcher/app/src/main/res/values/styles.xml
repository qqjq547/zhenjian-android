<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    <<< new >>>
    大驼峰命名法
    {模块名称}{用在哪个控件}
     -->

    <!--account-->

    <style name="AccountTip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_4c94ff</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="AccountEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_75</item>
        <item name="android:layout_marginRight">@dimen/dp_75</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingLeft">@dimen/dp_2</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">@color/gray_333333</item>
        <item name="android:textColorHint">#FFD5D5D5</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="AccountOkBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_account_confirm</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="AccountLightTip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_999999</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="AccountDarkTip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_4c94ff</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="AccountTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:textColor">@color/gray_333333</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="AccountForward">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
    </style>

    <style name="AccountSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_4</item>
        <item name="android:layout_marginRight">@dimen/dp_4</item>
        <item name="android:gravity">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_9c9c9c</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="AccountLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:background">@color/gray_f2f2f2</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0_8</item>
        <item name="android:background">@color/gray_f2f2f2</item>
    </style>

    <!--仿微信字体大小调整 FontSizeView-->
    <declare-styleable name="FontSizeView">
        <attr name="lineWidth" format="dimension|reference" />
        <attr name="lineColor" format="color|reference" />
        <attr name="totalCount" format="integer" />
        <attr name="circleColor" format="color|reference" />
        <attr name="circleRadius" format="dimension|reference" />

        <attr name="textFontColor" format="color|reference" />
        <attr name="smallSize" format="integer" />
        <attr name="standerSize" format="integer" />
        <attr name="bigSize" format="integer" />
        <attr name="defaultPosition" format="integer" />
    </declare-styleable>
    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/jin</item>
        <item name="android:windowExitAnimation">@anim/tui</item>
    </style>

    <style name="apply_friend_dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <style name="main_menu_animStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
</resources>
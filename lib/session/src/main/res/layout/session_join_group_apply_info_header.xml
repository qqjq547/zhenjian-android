<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12"
            android:background="@color/gray_f9f9f9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.watayouxiang.androidutils.widget.imageview.TioImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/avatar_wh_42"
                android:layout_height="@dimen/avatar_wh_42"
                android:layout_marginTop="@dimen/dp_15"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:text="@string/test"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/sp_13"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_avatar" />

            <TextView
                android:id="@+id/tv_explainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:text="@string/test"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/sp_18"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_nick" />

            <TextView
                android:id="@+id/tv_explainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:background="@color/gray_f8f8f8"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20"
                android:text="@string/test"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/sp_14"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_explainTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="com.tiocloud.account.widget.ProtocolView" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/account_sel_checkbox"
            android:gravity="center"
            android:onClick="@{data.onClick_tvCheckBox}"
            android:text="阅读并同意"
            android:textColor="@color/gray_999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{data.onClick_xieyi}"
            android:text="《用户服务协议》"
            android:textColor="@color/blue_4c94ff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/gray_999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_zhengce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{data.onClick_zhengce}"
            android:text="《隐私政策》"
            android:textColor="@color/blue_4c94ff"
            android:textSize="14sp" />
    </LinearLayout>
</layout>
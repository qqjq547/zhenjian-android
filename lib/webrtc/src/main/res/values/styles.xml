<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tio 主题 -->
    <style name="TioTheme" parent="QMUITheme.Blue.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <!--webrtc-->

    <style name="WebrtcLocalRenderer">
        <item name="android:layout_width">@dimen/dp_78</item>
        <item name="android:layout_height">@dimen/dp_138</item>
    </style>

    <style name="WebrtcAvatar">
        <item name="android:layout_width">@dimen/avatar_wh_67</item>
        <item name="android:layout_height">@dimen/avatar_wh_67</item>
    </style>

    <style name="WebrtcNick">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="WebrtcTip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="WebrtcNegativeBtn">
        <item name="android:layout_width">@dimen/dp_111</item>
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:background">@drawable/tio_bg_call_negative_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="WebrtcPositiveBtn">
        <item name="android:layout_width">@dimen/dp_111</item>
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:background">@drawable/tio_bg_call_positive_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="WebrtcTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <style name="WebrtcDrawableButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

</resources>